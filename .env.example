# ================================
# TRADING CONFIGURATION
# ================================
DEFAULT_SYMBOL=BTCUSDT
RISK_PER_TRADE=0.02
MIN_CONFIDENCE=0.7
TRADING_MODE=swing
MAX_POSITIONS=3

# ================================
# BINANCE API CONFIGURATION
# ================================
# NOTE: These are example testnet keys - replace with your actual keys
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true
BINANCE_BASE_URL=https://testnet.binance.vision

# ================================
# AI CONFIGURATION
# ================================
OLLAMA_MODEL=llama2
OLLAMA_HOST=http://localhost:11434
AI_ANALYSIS_ENABLED=true

# ================================
# DATA SOURCE API KEYS (OPTIONAL)
# ================================
# Social media and news APIs - all optional for basic functionality
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=crypto_trading_bot_v1.0

# NewsAPI (Optional - for premium news sources)
NEWS_API_KEY=your_news_api_key_here

# ================================
# DATABASE CONFIGURATION
# ================================
# Database usage is optional - set ENABLE_DATABASE=true to use
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=changeme123
MONGODB_URI=mongodb://localhost:27017/crypto_trading
MONGO_USERNAME=admin
MONGO_PASSWORD=changeme123
ENABLE_DATABASE=false

# ================================
# MCP SERVER PORTS
# ================================
NEWS_MCP_PORT=8001
TECHNICAL_MCP_PORT=8002
SOCIAL_MCP_PORT=8003
BINANCE_MCP_PORT=8004
RISK_MCP_PORT=8005
AI_MCP_PORT=8006

# ================================
# RISK MANAGEMENT
# ================================
STOP_LOSS_PERCENT=0.05
TAKE_PROFIT_RATIO=2.0
MAX_DRAWDOWN=0.15
EMERGENCY_STOP=false
ENABLE_PAPER_TRADING=true

# ================================
# MONITORING AND LOGGING
# ================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
SENTRY_DSN=your_sentry_dsn_here

# Grafana dashboard password
GRAFANA_PASSWORD=admin

# ================================
# PERFORMANCE AND CACHING
# ================================
# Rate limiting
API_RATE_LIMIT=100
BINANCE_RATE_LIMIT=1200
NEWS_RATE_LIMIT=60

# Cache settings
CACHE_TTL_MINUTES=15
ENABLE_CACHE=true
CACHE_TYPE=memory

# ================================
# SECURITY AND SSL
# ================================
# API authentication
API_SECRET_KEY=your_secret_key_for_api_authentication
ENABLE_API_AUTH=false
ALLOWED_IPS=127.0.0.1,localhost

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
ENABLE_SSL=false