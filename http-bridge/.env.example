# Crypto Trading MCP HTTP Bridge Configuration

# Server Configuration
MCP_HOST=0.0.0.0
MCP_PORT=8080
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=1000

# Request Timeouts (milliseconds)
REQUEST_TIMEOUT=30000
HEALTH_CHECK_TIMEOUT=5000
MCP_SERVER_TIMEOUT=30000
MCP_SERVER_RETRIES=3

# Security Features
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
CORS_ORIGINS=http://localhost:5678,http://127.0.0.1:5678

# WebSocket Support
ENABLE_WEBSOCKET=true
MAX_WS_CONNECTIONS=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Python Interpreter Path
PYTHON_PATH=python3

# Binance API (for testing - add your credentials)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true

# Trading Configuration
DEFAULT_SYMBOL=BTCUSDT
RISK_PER_TRADE=0.02
MIN_CONFIDENCE=0.7

# External APIs (optional)
TWITTER_BEARER_TOKEN=your_twitter_token
REDDIT_CLIENT_ID=your_reddit_id
REDDIT_CLIENT_SECRET=your_reddit_secret
NEWS_API_KEY=your_news_api_key

# AI Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2

# Database (optional)
REDIS_URL=redis://localhost:6379
MONGODB_URI=mongodb://localhost:27017/crypto_trading